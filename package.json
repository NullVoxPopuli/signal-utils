{
  "name": "signal-utils",
  "version": "0.0.1",
  "description": "Utils for use with the Signals Proposal: https://github.com/proposal-signals/proposal-signals",
  "scripts": {
    "start": "concurrently 'vite build --watch' 'cd tests && pnpm vitest'",
    "test": "cd tests && pnpm test",
    "build": "vite build",
    "format": "prettier --write .",
    "prepack": "pnpm run build"
  },
  "type": "module",
  "files": [
    "dist",
    "declarations"
  ],
  "exports": {
    ".": {
      "types": "./declarations/index.d.ts",
      "default": "./dist/index.js"
    },
    "./*": {
      "types": "./declarations/*",
      "default": "./dist/*"
    }
  },
  "typesVersions": {
    ">=4.0.0": {
      "*": [
        "declarations/*"
      ]
    }
  },
  "keywords": [
    "signals",
    "signal",
    "reactivity",
    "tracked",
    "rune",
    "runes",
    "ember",
    "glimmer",
    "svelte",
    "vue",
    "angular",
    "solid",
    "preact"
  ],
  "author": "NullVoxPopuli",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.24.3",
    "@babel/plugin-proposal-decorators": "^7.24.1",
    "@babel/plugin-syntax-decorators": "^7.24.1",
    "@babel/plugin-transform-typescript": "^7.24.1",
    "@babel/preset-typescript": "^7.24.1",
    "@rollup/plugin-babel": "^6.0.4",
    "@tsconfig/strictest": "^2.0.5",
    "concurrently": "^8.2.2",
    "globby": "^14.0.1",
    "prettier": "^3.2.5",
    "typescript": "^5.4.3",
    "vite": "^5.2.7",
    "vite-plugin-dts": "^3.8.1"
  },
  "dependencies": {
    "signal-polyfill": "^0.1.0"
  }
}
